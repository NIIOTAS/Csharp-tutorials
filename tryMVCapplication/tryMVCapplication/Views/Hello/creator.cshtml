@model HelloViewModel

<h1>
    Create
</h1>
<hr/>
<div class="row">

<div class="col-6">

    <div class="card">
        <hr/>
            <div class="card-header">
                <h1>Create a Member</h1>
            </div>

            <div class="card-body">

                <form asp-controller="Hello" asp-action="createmember" method="post">

                    <div class="mb-3">
                        <label class="form-label">
                                Name
                        </label>

                        <input asp-for="Name" type="text" class="form-control"/>

                    </div>

                    <div class="mb-3">
                        <label class="form-label">
                            Age
                        </label>

                        <input asp-for="Age" type="number" class="form-control"/>

                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary">
                        Save
                        </button>
                    </div>

                </form> 

            </div>

            <div class="card-footer">

            </div>

    </div>

</div>

</div>